#
# Prevent accidental commits using
#  + "NOCOMMIT"
#  + "NO_COMMIT"
#  + "DO_NOT_COMMIT"
# or the above with spaces instead of underscores.
if git commit -v --dry-run | grep -e '\(NO\|NO\(_\| \)\|DO\(_\| \)NOT\(_\| \)\)COMMIT' >/dev/null 2>&1
then
  echo "Trying to commit non-committable code."
  exit 1
else
  exit 0
fi
