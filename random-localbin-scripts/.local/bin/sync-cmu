#! /bin/sh

SRC_DIR=/home/jay/Desktop/CMU/
REMOTE=gdrive		   # Need to have [rclone config]ured for this
REMOTE_DIR=cmu
REMOTE_BACKUP_DIR=backup-cmu

rclone copy ${SRC_DIR} ${REMOTE}:${REMOTE_DIR} \
       --progress \
       --fast-list \
       --checksum \
       --copy-links \
       --backup-dir ${REMOTE}:${REMOTE_BACKUP_DIR}
